{
  "extends": "stylelint-config-recommended",
  "rules": {
    "function-no-unknown": [true, { "ignoreFunctions": ["theme"] }],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "tailwind", "layer"]
      }
    ],
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "s", "px", "%"]
  }
}
